{
  "title": "Use Print Screen (PrtScn) PC button for screen capture portion to Clipboard - Same as Cmd+Ctrl+Shift+4",
  "maintainers": [
    "arkulkarni"
  ],
  "rules": [
    {
      "description": "Print Screen (PrtScn) to Command+Ctrl+Shift+4",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "print_screen"
          },
          "to": {
            "key_code": "4",
            "modifiers": [
              "left_control",
              "left_command",
              "left_shift"
            ]
          }
        }
      ]
    }
  ]
}
